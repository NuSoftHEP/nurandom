# Test the seeds service.
# 
# Policy:          perEvent
# Valid:           yes
# Will succeed:    yes
# Purpose:         test pre-event seeding 
# 
# The service does not even read range check configuration.
#
#

#include "messageService.fcl"

# Give this job a name.
process_name : SeedTestPredefined

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 2
}

services :
{
  message : @local::mf_interactive
  RandomNumberGenerator: {}

  NuRandomService: {
    policy            : "perEvent"
    
    preEventPolicy: {
      policy            : "preDefinedSeed"
      baseSeed          :     1
      maxUniqueEngines  :     6
      checkRange        :  true
      
      stest01 : {
        a : 3
        b : 5
      }

      stest02 : {
        a : 7
        c : 9
      }
      
    } # preEventPolicy
    
    verbosity         :     2
    endOfJobSummary   :  false

  }

}

physics :
{
  analyzers: {
    stest01 : {
      module_type : SeedTestPolicy
      module_name : stest01
      instanceNames : [ "a", "b" ]
    }

    stest02 : {
      module_type : SeedTestPolicy
      module_name : stest02
      instanceNames : [ "a", "c" ]
    }

  }

  e1 : [stest01, stest02]

  end_paths      : [e1]

}
